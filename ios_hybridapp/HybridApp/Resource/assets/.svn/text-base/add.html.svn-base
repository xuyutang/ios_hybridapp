    App.setTopMenu([{"name":"保存","callback":"saveForm()"},{"name":"wifi","callback":"wifiSetting()"}]);
    App.getLocation();

    //获取当前WIFI热点的名称和MAC地址
    var currentWifi = App.getCurrentWifi();
    $("#wifi").val(JSON.stringify(currentWifi));
}
